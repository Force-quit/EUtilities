name: Release project

on: 
  push:
    tags:
    - '*'
jobs:
  build:
    runs-on: windows-latest
    steps:
    - uses: actions/checkout@v4
    - name: Generate build files
      run: cmake -B build
    - name: Build project
      run: cmake --build build --target EUtilities
  release:
    runs-on: windows-latest
    permissions:
      contents: write
    steps:
    - uses: ncipollo/release-action@v1
#      with:
#        artifacts: "release.tar.gz,foo/*.txt"
